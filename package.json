{
  "name": "@stzhu/prettier-plugin-tsconfig",
  "version": "0.7.2",
  "keywords": [
    "prettier",
    "typescript",
    "tsconfig"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stevezhu/prettier-plugin-tsconfig.git"
  },
  "license": "MIT",
  "author": "Steve Zhu <4130171+stevezhu@users.noreply.github.com>",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/*"
  ],
  "scripts": {
    "build": "tsup",
    "format": "prettier -w . && eslint . --fix",
    "generate": "tsx scripts/generateSortOrder.ts",
    "lint": "prettier -c . && eslint .",
    "test": "tsc --noEmit && vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@babel/types": "^7.28.5"
  },
  "devDependencies": {
    "@stzhu/eslint-config": "^0.9.0",
    "@stzhu/tsconfig": "^0.1.1",
    "@types/node": "^25.0.3",
    "cheerio": "^1.1.2",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "prettier-plugin-packagejson": "^3.0.0",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "peerDependencies": {
    "prettier": "^3.x"
  },
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": ">=20"
  }
}
